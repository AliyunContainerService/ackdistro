COPY Metadata .

COPY trident ./bin
COPY kubectl ./bin
COPY kubeadm ./bin
COPY kubelet ./bin
COPY helm ./bin

COPY scripts/disk_init.sh scripts
COPY scripts/disk_init_rollback.sh scripts
COPY scripts/install_addons.sh scripts

COPY imageList manifests
COPY kubeadm.yml ./etc
